<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="@drawable/background"
    android:padding="30dp">

    <EditText
        android:id="@+id/movie_input2"
        android:layout_width="262dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:background="#D3D2D2"
        android:hint="Movie"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/type_input2"
        android:layout_width="262dp"
        android:layout_height="52dp"
        android:background="#D3D2D2"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Movie Genres"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_input2" />

    <EditText
        android:id="@+id/runtime_input2"
        android:layout_width="262dp"
        android:layout_height="52dp"
        android:background="#D3D2D2"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Running time"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_input2"  />
    <EditText
        android:id="@+id/plot_input2"
        android:layout_width="262dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#D3D2D2"
        android:ems="10"
        android:hint="Plot"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/runtime_input2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/runtime_input2"
        app:layout_constraintTop_toBottomOf="@+id/runtime_input2" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_pressed"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plot_input2" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_pressed"
        android:text="Delete"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_button" />

</androidx.constraintlayout.widget.ConstraintLayout>